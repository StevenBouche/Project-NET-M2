<Page x:Class="WPF.Reader.Pages.ReadBook"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Reader.Pages"
      xmlns:vm="clr-namespace:WPF.Reader.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=vm:ReadBook, d:IsDesignTimeCreatable=True}"
      Title="ReadBook">
    <Page.Resources>
        <vm:Navigator x:Key="navigator" />
        <Style TargetType="{x:Type Border}" x:Key="pageBorder">
            <Setter Property="Background" Value="WhiteSmoke" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="150" />
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Page.Resources>
    <Grid Width="803">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <!-- On aimerais bien avoir le tire du livre en entête -->

        <Grid>
            <materialDesign:Card Padding="16" Margin="16">
                <TextBlock TextAlignment="Center"   TextWrapping="Wrap" FontWeight="UltraBold" Foreground="Navy"  
                           Style="{DynamicResource MaterialDesignTitleTextBlock}"  Text="{Binding CurrentBook.Name}" Background="White"/>
            </materialDesign:Card>
        </Grid>



        <!-- Ainsi que le contenu du livre ! -->

        <Grid Margin="92,16,400,18" Grid.Row="1" Grid.RowSpan="2">
            <materialDesign:Card Padding="32" Margin="16">
                <TextBlock   Foreground="Navy"  Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="{Binding PageContentLeft}" Background="White" TextWrapping="Wrap"/>
            </materialDesign:Card>
        </Grid>

        <Grid Margin="400,16,92,18" Grid.Row="1" Grid.RowSpan="2">
            <materialDesign:Card Padding="32" Margin="16">
                <TextBlock   Foreground="Navy"  Style="{DynamicResource MaterialDesignTitleTextBlock}" Text="{Binding PageContentRight}" Background="White" TextWrapping="Wrap"/>
            </materialDesign:Card>
        </Grid>

        <Button Grid.Row="2" Command="{Binding Path=GoBack, Source={StaticResource ResourceKey=navigator}}" CommandParameter="LIST" Height="30" VerticalAlignment="Top" HorizontalAlignment="Center" Width="200" Content="Retourner au details" Margin="0,50,0,0"/>

        <Button Command="{Binding HandleNextPage}" x:Name="btnNext" RenderTransformOrigin="0.594,0.618" Margin="727,158,0,0" Grid.Row="1" Content="&gt;" BorderBrush="#FF2D55B9" FontWeight="Bold" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Height="52" Width="53" Background="#FF2851B9"/>
        <Button Command="{Binding HandlePreviousPage}" x:Name="btnNext_Copy" RenderTransformOrigin="0.594,0.618" Margin="20,158,0,0" Grid.Row="1" Content="&lt;" Background="#FF2851B9" BorderBrush="#FF2D55B9" FontWeight="Bold" FontSize="24" VerticalAlignment="Top" HorizontalAlignment="Left" Height="52" Width="53" Cursor="Hand"/>
    </Grid>
</Page>

